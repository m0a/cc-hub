{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "types": ["bun-types"],
    "resolveJsonModule": true,
    "paths": {
      "shared": ["../shared/types.ts"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
